<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Existing Views for Post Content and Edit Button -->
    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_border"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonEditPost"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/edit"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/button_background"
        android:padding="8dp"
        android:visibility="gone" />

    <!-- Button to Show/Hide Comments Section -->
    <Button
        android:id="@+id/buttonShowComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comments" />

    <!-- Comment Input Section -->
    <LinearLayout
        android:id="@+id/layoutCommentInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/editTextWriteComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/write_a_comment" />

        <Button
            android:id="@+id/buttonPostComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_comment" />
    </LinearLayout>

    <!-- RecyclerView for Comments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>